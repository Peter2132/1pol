<Window x:Class="WpfAppTelefon3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTelefon3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0*"/>




        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>



        </Grid.ColumnDefinitions>

       
        <Button Style="{DynamicResource NewButtonStyle3}"   x:Name="Button" Content="Создать чат"  Grid.Row="1" Click="Button_Click" />
        <Button Style="{DynamicResource NewButtonStyle2}" x:Name="Button2" Content="Подключится"  Grid.Row="2" Click="Button2_Click" />
        <Button Style="{DynamicResource NewButtonStyle2}" x:Name="Button4" Content="Сериализация дессериализация"  Grid.Row="4" Click="Button4_Click"  />
        <TextBox x:Name="TextName" Grid.Row="0" />
        <TextBox x:Name="TextIp" Grid.Row="3" />


    </Grid>
</Window>
